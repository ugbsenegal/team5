<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bmd.tsg_mbour.Inscription"
    android:background="@drawable/fondins">


    <LinearLayout
        android:id="@+id/textv_inscription"
        android:layout_width="368dp"
        android:layout_height="106dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSCRIPTION"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textv_llform"
        android:layout_width="368dp"
        android:layout_height="285dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textv_inscription"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/txt_Prenom"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_bg"
            android:ems="10"
            android:hint="Prenom"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_Nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <EditText
            android:id="@+id/txt_Telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Telephone"
            android:inputType="phone"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <EditText
            android:id="@+id/txt_Fonction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fonction"
            android:inputType="textPersonName"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <EditText
            android:id="@+id/txt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <EditText
            android:id="@+id/txt_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:background="@drawable/edit_bg"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="116dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textv_llform"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btn_Validerinscription"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:srcCompat="@drawable/tsg1"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="447dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
